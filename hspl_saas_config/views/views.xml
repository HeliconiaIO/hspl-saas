<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form_hspl" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hspl.apps</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="saas_apps.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='apps_general_settings']" position="inside">
                <setting id="saas_show_monthly" help="Show Monthly packages at 'price' page" invisible="show_packages == False">
                    <field name="show_monthly" class="o_light_label" />
                </setting>
                <setting id="saas_show_yearly" help="Show Yearly packages at 'price' page" invisible="show_packages == False">
                    <field name="show_yearly" class="o_light_label" />
                </setting>
                <setting id="saas_show_users" help="Show Users selection in 'price' page">
                    <field name="show_users" class="o_light_label" />
                </setting>
            </xpath>
        </field>
    </record>

</odoo>
