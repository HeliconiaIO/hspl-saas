<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="saas_template_form_view_inherited" model="ir.ui.view">
        <field name="name">saas.template.form.view.inherited</field>
        <field name="model">saas.template</field>
        <field name="inherit_id" ref="saas.saas_template_form_view"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <field name="year_price" position="after">
                <label for="expiry_notify_days"/>
                <div class="o_row">
                    <field name="expiry_notify_days" class="oe_inline" /> Days
                </div>
            </field>
        </field>
    </record>

    <record id="saas_db_form_view_inherited" model="ir.ui.view">
        <field name="name">saas.db.form.view.inherited</field>
        <field name="model">saas.db</field>
        <field name="inherit_id" ref="saas.saas_db_form_view"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <field name="database_limit_size" position="after">
                <label for="expiry_notify_days"/>
                <div class="o_row">
                    <field name="expiry_notify_days" class="oe_inline" /> Days
                </div>
            </field>
        </field>
    </record>

    <record id="contract_contract_form_view_inherited" model="ir.ui.view">
        <field name="name">contract.contract.form.view.inherited</field>
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract.contract_contract_form_view"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <field name="recurring_invoicing_type" position="after">
                <label for="expiry_notify_days"/>
                <div class="o_row">
                    <field name="expiry_notify_days" class="oe_inline" /> Days
                </div>
            </field>
        </field>
    </record>

</odoo>
