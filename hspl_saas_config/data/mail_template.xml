<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Email Template: Email for renew subscription -->
<record id="mail_template_contract_expiry_alert" model="mail.template">
    <field name="name">Contract: Email Expiry Alert</field>
    <field name="model_id" ref="contract.model_contract_contract"/>
    <field name="subject">Action Required: Your SaaS Contract is Expiring Soon</field>
    <field name="email_from">{{ object.company_id.email }}</field>
    <field name="email_to">{{ object.partner_id.email }}</field>
    <field name="auto_delete" eval="True"/>
    <field name="lang">{{ object.partner_id.lang }}</field>
    <field name="body_html" type="html">
        <div style="background:#F0F0F0;color:#515166;padding:10px 0px;font-family:Arial,Helvetica,sans-serif;font-size:14px;">
            <table style="width:600px;margin:5px auto;">
                <tbody>
                    <tr>
                        <td>
                            <a href="/">
                                <img src="/web/binary/company_logo"
                                     style="vertical-align:baseline;max-width:100px;"/>
                            </a>
                        </td>
                        <td style="text-align:right;vertical-align:middle;">
                            Contract Expiry Alert
                        </td>
                    </tr>
                </tbody>
            </table>
            <table style="width:600px;margin:0px auto;background:white;border:1px solid #e1e1e1;">
                <tbody>
                    <tr>
                        <td style="padding:15px 20px 10px 20px;">
                            <p>Dear <t t-out="object.partner_id.name or ''"/>,</p>
                            <p>We hope this message finds you well.</p>
                            <p>We would like to inform you that your contract, <strong t-out="object.name or ''"/>
                               is set to expire on <strong t-out="object.recurring_next_date or ''"/>.
                            </p>
                            <p>If you have any questions or concerns,
                                please don't hesitate to contact your representative at <t t-out="object.company_id.name or ''"/> or simply reply to this email.
                            </p>
                            <p>Please note that your contract will expire in <strong><t t-out="object.get_different_days()"/> days</strong>.
                                If you wish to continue enjoying our services, we encourage you to take action at your earliest convenience.</p>

                            <!-- Added Payment Section -->
                            <p>To renew your contract, please click the link below to complete the payment:</p>
                            <p>
                                <a t-att-href="object.get_renew_payment_link()"
                                   style="color:#ffffff;background-color:#007bff;padding:10px 20px;border-radius:5px;text-decoration:none;">
                                    Renew Contract Now
                                </a>
                            </p>
                            <p>This link will direct you to the payment page, where you can finalize your renewal quickly and securely.</p>
                            <p>Thank you for choosing <strong t-out="object.company_id.name or ''"/>. We look forward to continuing to serve you.</p>

                            <p>Kind regards,</p>
                            <p><strong t-out="object.company_id.name or ''"/></p>
                        </td>
                    </tr>
                    <tr>
                    </tr>
                </tbody>
            </table>
        </div>
    </field>
</record>


</odoo>