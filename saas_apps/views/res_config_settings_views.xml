<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.apps</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='website_settings']" position="after">
                <block title="SaaS pricing page" id="apps_general_settings">
                    <setting id="saas_show_packages" help="Show packages at 'price' page">
                        <field name="show_packages" class="o_light_label" />
                    </setting>
                    <setting id="saas_show_apps" help="Show applications at 'price' page">
                        <field name="show_apps" class="o_light_label" />
                    </setting>
                    <setting id="saas_show_buy_now_button" help="Show 'Buy now' button">
                        <field name="show_buy_now_button" class="o_light_label" />
                    </setting>
                    <setting id="saas_show_try_trial_button" help="Show 'Try trial' button">
                        <field name="show_try_trial_button" class="o_light_label" />
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
